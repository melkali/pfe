{% extends './users/index.html.twig' %}

{% block title %}Results index{% endblock %}

{% block body %}
    <h1>Results index</h1>

    <table class="table">
    <thead class="thead-dark">

            <tr>
                <th>Id</th>
                <th>Name_result</th>
                <th>Content_result</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>{{ result.id }}</td>
                <td>{{ result.nameResult }}</td>
                <td>{{ result.contentResult }}</td>
                <td>{{ result.createdAt ? result.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('results_show', {'id': result.id}) }}">show</a>
                    <a href="{{ path('results_edit', {'id': result.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('results_new') }}">Create new</a>
{% endblock %}
