{% extends './users/index.html.twig' %}

{% block title %}Payments index{% endblock %}

{% block body %}
    <h1>Payments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name_payment</th>
                <th>Status</th>
                <th>Sum</th>
                <th>Content_payment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.namePayment }}</td>
                <td>{{ payment.status ? 'Yes' : 'No' }}</td>
                <td>{{ payment.sum }}</td>
                <td>{{ payment.contentPayment }}</td>
                <td>
                    <a href="{{ path('payments_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('payments_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('payments_new') }}">Create new</a>
{% endblock %}
