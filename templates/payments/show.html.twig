{% extends './users/index.html.twig' %}

{% block title %}Payments{% endblock %}

{% block body %}
    <h1>Payments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Name_payment</th>
                <td>{{ payment.namePayment }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ payment.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Sum</th>
                <td>{{ payment.sum }}</td>
            </tr>
            <tr>
                <th>Content_payment</th>
                <td>{{ payment.contentPayment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('payments_index') }}">back to list</a>

    <a href="{{ path('payments_edit', {'id': payment.id}) }}">edit</a>

    {{ include('payments/_delete_form.html.twig') }}
{% endblock %}
