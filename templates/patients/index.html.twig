{% extends './users/index.html.twig' %}

{% block title %}Patients index{% endblock %}

{% block body %}
    <h1>Patients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name_patient</th>
                <th>Firstname_patient</th>
                <th>Phone</th>
                <th>Date_birth</th>
                <th>Doctor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.namePatient }}</td>
                <td>{{ patient.firstnamePatient }}</td>
                <td>{{ patient.phone }}</td>
                <td>{{ patient.dateBirth ? patient.dateBirth|date('Y-m-d') : '' }}</td>
                <td>{{ patient.doctor }}</td>
                <td>
                    <a href="{{ path('patients_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('patients_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('patients_new') }}">Create new</a>
{% endblock %}
